<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/vToolbar"
                android:background="@color/colorMarine"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <ImageView
                android:id="@+id/bBack"
                android:padding="5dp"
                android:background="@drawable/ripple_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:tint="@color/colorWhite"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/iSurat"
                android:tint="@color/colorWhite"
                android:src="@drawable/zz_28"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tSurat"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iSurat"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui"
                android:text="Al-Fatihah: 154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tAyat"
                android:textSize="22sp"
                android:fontFamily="@font/me_quran"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="hjjgas"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/t1"
                android:text="Terjemah:"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tAyat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tTerjemah"
                android:text="sasasasasasasas"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/t2"
                android:text="Tafsir:"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tTerjemah"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tTafsir"
                android:text="sasasasasasasas"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="italic"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>