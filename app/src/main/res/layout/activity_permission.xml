<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompassActivity">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_kompas"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CompassActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.CompassActivity">

            <TextView
                android:id="@+id/tvHeading"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/segoe_ui_semilight"
                android:textColor="@color/colorMarine"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="38dp"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/t1"
                android:layout_margin="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/segoe_ui"
                android:textColor="@color/colorMarine"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Aplikasi Tafsir For Blind membutuhkan izin agar semua fitur di dalam aplikasi berjalan dengan lancar" />

            <android.support.v7.widget.CardView
                android:id="@+id/c1"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/i1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="6dp"
                        android:padding="8dp"
                        android:background="@drawable/circle_marine"
                        android:src="@drawable/ic_maps_and_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/t2"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/i1"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textColor="@color/colorMarine"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Izin Lokasi" />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/t2"
                        app:layout_constraintStart_toEndOf="@id/i1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorMarine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi ini membutuhkan izin lokasi agar bisa menghitung jadwal sholat dan menentukan arah kiblat" />

                    <TextView
                        android:id="@+id/bIzinkanLokasi"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/t3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/ripple"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textColor="@color/colorMarine"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Izinkan" />

                    <TextView
                        android:id="@+id/tLokasiDiizinkan"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/bg_permitted"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Diizinkan" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c2"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/i2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="6dp"
                        android:padding="8dp"
                        android:background="@drawable/circle_marine"
                        android:src="@drawable/ic_disc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/t4"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/i2"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textColor="@color/colorMarine"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Izin Penyimpanan" />

                    <TextView
                        android:id="@+id/t5"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/t4"
                        app:layout_constraintStart_toEndOf="@id/i2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorMarine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi ini membutuhkan izin penyimpanan untuk menyimpan dan membaca audio ayat al-Qur'an" />

                    <TextView
                        android:id="@+id/bIzinkanStorage"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/t5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/ripple"
                        android:fontFamily="@font/segoe_ui_semibold"
                        android:textColor="@color/colorMarine"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Izinkan" />

                    <TextView
                        android:id="@+id/tStorageDiizinkan"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/bg_permitted"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/colorWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Diizinkan" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/bNext"
                app:layout_constraintTop_toBottomOf="@id/c2"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_reset"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/segoe_ui"
                    android:paddingBottom="2dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lanjut ke aplikasi"/>

                <ImageView
                    android:id="@+id/iCheck"
                    android:visibility="invisible"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                app:layout_constraintTop_toBottomOf="@id/bNext"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="10dp"
                android:layout_height="100dp"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>