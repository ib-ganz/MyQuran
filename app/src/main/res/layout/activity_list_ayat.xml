<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListSuratActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/vToolbar"
            android:background="@color/colorMarine"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/bBack"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:id="@+id/iSurat"
            android:tint="@color/colorWhite"
            android:src="@drawable/zz_28"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/tSurat"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iSurat"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui"
            android:text="Al-Fatihah: 154"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/bSemua"
            android:padding="12dp"
            android:background="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iSurat2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/colorMarine"
                android:src="@drawable/zz_28"
                android:adjustViewBounds="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ttt"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:text="Semua ayat"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tSurat2"
                android:layout_below="@id/ttt"
                android:textColor="@color/colorMarine"
                android:textSize="19sp"
                android:fontFamily="@font/segoe_ui"
                android:text="Al-Fatihah: 154"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAyat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>