<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AllAyatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/vToolbar"
            android:background="@color/colorMarine"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/bBack"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:id="@+id/iSurat"
            android:tint="@color/colorWhite"
            android:src="@drawable/zz_28"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="22dp"/>

        <TextView
            android:id="@+id/tSurat"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iSurat"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            android:text="Al-Fatihah: 154"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/bUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_marginEnd="4dp"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/bDown"/>

        <ImageView
            android:id="@+id/bDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_marginEnd="4dp"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/bPlayPause"/>

        <ImageView
            android:id="@+id/bPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_marginEnd="12dp"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAyat"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>