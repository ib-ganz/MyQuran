<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListSuratActivity">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_kompas"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/r"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/vToolbar"
            android:background="@color/colorMarine"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

        <ImageView
            android:id="@+id/bBack"
            android:padding="5dp"
            android:background="@drawable/ripple_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tSurat"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui"
            android:text="Tentang Aplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/r"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:padding="32dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorMarine"
                android:textSize="22sp"
                android:fontFamily="@font/segoe_ui_semibold"
                android:text="Tafsir For Blind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:text="'Tafsir For Blind' merupakan aplikasi yang menjadi salah satu alternatif media pembelajaran al-Qur'an dan tafsir Jalalain kepada kaum penyandang tuna netra pada khususnya dan masyarakat pada umumnya."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:text="Selain sebagai pembelajaran al-Qur'an dan tafsir Jalalain, aplikasi ini juga dilengkapi dengan berbagai fitur yang diharapkan mampu membantu kaum penyandang tuna netra untuk melaksanakan kegiatan ibadah sehari-hari, seperti jadwal sholat dan kompas kiblat."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMarine"
                android:fontFamily="@font/segoe_ui"
                android:text="Aplikasi ini dibuat untuk memenuhi tugas akhir yang ditempuh oleh penulis di jurusan Ilmu Al-Qur'an dan Tafsir Universitas Islam Negri Yogyakarta melalui bimbingan dosen pembimbing penulis, yaitu Dr. Ali Imron, S.Th.I, M.S.I."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/i1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="centerCrop"
                    android:layout_width="65dp"
                    android:layout_height="82dp"
                    android:src="@drawable/p_ali"/>

                <TextView
                    android:id="@+id/t1"
                    app:layout_constraintStart_toEndOf="@id/i1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorMarine"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Dr. Ali Imron, S.Th.I, M.S.I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/t2"
                    app:layout_constraintStart_toEndOf="@id/i1"
                    app:layout_constraintTop_toBottomOf="@id/t1"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorMarine"
                    android:fontFamily="@font/segoe_ui"
                    android:text="NIP: 19821105 200912 1 002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/bWa1"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/i1"
                    app:layout_constraintTop_toBottomOf="@id/t2"
                    android:elevation="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/btn_wa"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_whatsapp"/>

                    <TextView
                        android:textColor="#FFF"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:paddingBottom="1dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="081328122219"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/i2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="centerCrop"
                    android:layout_width="65dp"
                    android:layout_height="82dp"
                    android:src="@drawable/aq"/>

                <TextView
                    android:id="@+id/t4"
                    app:layout_constraintStart_toEndOf="@id/i2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorMarine"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Hasan Nurul Ibad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/t5"
                    app:layout_constraintStart_toEndOf="@id/i2"
                    app:layout_constraintTop_toBottomOf="@id/t4"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorMarine"
                    android:fontFamily="@font/segoe_ui"
                    android:text="hasannurulibad@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/bWa2"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/i2"
                    app:layout_constraintTop_toBottomOf="@id/t5"
                    android:elevation="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/btn_wa"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_whatsapp"/>

                    <TextView
                        android:textColor="#FFF"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:paddingBottom="1dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="081329929810"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>